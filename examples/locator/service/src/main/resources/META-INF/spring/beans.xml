<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
    <import resource="classpath:META-INF/cxf/osgi/cxf-extension-osgi.xml" />


	<jaxws:endpoint xmlns:tns="http://talend.org/esb/examples/"
			id="greeter"
			implementor="demo.service.GreeterImpl"
			serviceName="tns:GreeterService"
			address="/GreeterService">
		<jaxws:features>
			<bean class="org.talend.esb.locator.LocatorFeature">
		        <property name="endpointPrefix" value="http://localhost:8080/services"/>
			</bean>
		</jaxws:features>
	</jaxws:endpoint>
</beans>

