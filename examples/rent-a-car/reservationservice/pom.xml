<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.talend.esb.examples.rent-a-car</groupId>
    <artifactId>reservationservice</artifactId>
    <name>ReservationService</name>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.talend.esb.examples</groupId>
        <artifactId>rent-a-car</artifactId>
        <version>5.0.1-SNAPSHOT</version>
    </parent>
    
    <modules>
        <module>common</module>
        <module>service</module>
    </modules>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>client</module>
                <module>service-endpoint</module>
            </modules>
        </profile>
        <profile>
            <id>locator</id>
            <modules>
                <module>client-locator</module>
                <module>service-endpoint-locator</module>
            </modules>
        </profile>
        <profile>
            <id>sam</id>
            <modules>
                <module>client-sam</module>
                <module>service-endpoint-sam</module>
            </modules>
        </profile>
        <profile>
            <id>sts</id>
            <modules>
                <module>client-sts</module>
                <module>service-endpoint-sts</module>
            </modules>
        </profile>
        <profile>
            <id>jmx</id>
            <modules>
                <module>client</module>
                <module>service-endpoint-jmx</module>
            </modules>
        </profile>
    </profiles>

</project>
